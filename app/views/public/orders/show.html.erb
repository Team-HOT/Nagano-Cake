
<h1>注文履歴一覧</h1>


<h3>注文情報</h3>
<table>
	<tr>
		<th>注文日</th>
			<td><%= @order.created_at %></td>
	</tr>
	<tr>
		<th>配送先</th>
		<td>〒<%= @order.Delivery_address %></td>
	</tr>
	<tr>
		<th>支払い方法</th>
		<td><%= @order.payment %></td>
	</tr>
	<tr>
		<th>ステータス</th>
		<td><%= @order.order_status %></td>
	</tr>
</table>


----------------------------------------------
<table>
	<tr>
		<th>商品合計</th>


	<% @a = 0 %>
	<% tax = 1.1 %>
	<% @order.order_items.each do |o| %>
	<% @subtotal = o.order_item_price * o.quantity * tax %>
	<% @a += @subtotal %>
	<% end %>
			<td><%= @a %></td>


	</tr>
	<tr>
		<th>配送料</th>
			<td><%= @order.postage %>円</td>
	</tr>
	<tr>
		<th>ご請求額</th>
		<% @b = @a + @order.postage %>
			<td><%= converting_to_jpy(@b.floor) %>円</td>
	</tr>

</table>
--------------------------------------------
<table>
<thead>
	<tr>
		<th>商品</th>
		<th>単価(税込)</th>
		<th>個数</th>
		<th>小計</th>
	</tr>
</thead>
<tbody>
	<% tax =1.1 %>
	<% @order.order_items.each do |o| %>
	<tr>
		<td><%= o.order_item_name %></td>
		<td><%= o.order_item_price %></td>
		<td><%= o.quantity %>個</td>
		<% @syoukei = o.order_item_price * o.quantity * tax %>
		<td><%= converting_to_jpy(@syoukei.floor) %>円</td>
	</tr>
	<% end %>
</tbody>
</table>








