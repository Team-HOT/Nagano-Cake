

<!-- header用のdiv -->
<div class="header">
	<%= image_tag 'jpg2.jpg',size:'50x50' %>
</div>
<div class="container-fluid">
<div class="col-sm-4 sidenav">
	<h4>ジャンル検索</h4>
	<% @product_category.each do |category| %>
	<%= category.name %>
	<% end %>
</div>



<h1>商品一覧</h1>

<div class="col-sm-8">
	<div class="row content">
		<div class="col-md-8">
			<div class="row">
				<div class="col-xs-6">
		<% @products.each do |product| %>
		<%= link_to public_product_path(product.id) do  %>
		<%= attachment_image_tag product, :product_image, :fill, 200, 200, fallback: "no_image.jpg",size:'200x200',format: 'no_image.jpg' %>
		　　<% end %>
		<span><%= product.name %></span><br>
		<span><%= product.price %></span><br>
		<% end %>
</div>
</div>
</div>



       <!-- footer用のdiv -->
   <div class="footer"></div>
</body>
</div>
