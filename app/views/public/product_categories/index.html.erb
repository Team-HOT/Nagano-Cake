<%= render 'public/homes/header' %>
<div class="container">
	<div class="row">
		<%= render 'public/products/sidemenu' %>
		<% if flash[:notice] %>
		<div class="flash">
			<%= flash[:notice] %>
		</div>
		<% end %>

		<div class= col-xs-9>
			<div class="">
				<%= image_tag'スイーツ.jpg', size:'900x500'%>
			</div>

			<div class="products">
				<% tax = 1.1 %>
				<% @product.each do |products| %>
				<%= link_to public_product_path(products.id) do  %>
				<div class="item">
					<%= attachment_image_tag products, :product_image, :fill, 200, 200, fallback: "no_image.jpg",size:'200x200',format: 'no_image.jpg' %>

					<p class="font1">
						<%= products.name %><br>
						<% @total = products.price * tax %>
						¥<%= converting_to_jpy(@total.floor) %>(税込)
					</p>
				</div>
				<% end %>
				<% end %>
			</div>
			<nav>
				<div><%= paginate  @product %></div>
			</nav>
		</div>
	</div>


	<style>
	.font1 {
		color: #6e5064;
		font-size:2rem ; 
	}
</style>
