<!-- ヘッダー部分 -->
<%= render 'admin/products/header' %>

<h1>会員編集画面</h1>

  <% if @end_user.errors.any? %>
   <div class="alert-alert-warining">
	<p class="error-count">
		<%= @end_user.errors.full_messages.count %>errors prohibited this end_user from being saved:</p>
		<ul>
			<% @end_user.errors.full_messages.each do |message| %>
			  <li><%= message %></li>
			<% end %>
		</ul>
   </div>
  <% end %>

<p>会員ID <%= @end_user.id %></p>

<%= form_for(@end_user, url: admin_end_user_path(@end_user)) do |f| %>
	<p>氏名</p>
		<%= f.text_field :name1 %>
		<%= f.text_field :name2 %>
	<p>カナ</p>
		<%= f.text_field :name3 %>
		<%= f.text_field :name4 %>
	<P>郵便番号</P>
		<%= f.text_field :post %>
	<p>住所</p>
		<%= f.text_field :address %>
	<p>電話番号</p>
		<%= f.text_field :number %>
	<p>メールアドレス</p>
		<%= f.text_field :email %>
	<p>会員ステータス</p>
	<div><%= radio_button_tag(:num, 0) %>
	<%= label_tag(:num_0, "有効") %>
	<%= radio_button_tag(:num, 1) %>
	<%= label_tag(:num_1, "退会済み") %>
	</div>
	<br>
	<%= f.submit '変更を保存する' %>
<% end %>