<!-- ヘッダー部分 -->
<%= render 'admin/products/header' %>

<div class="container">
	<h3>会員詳細画面</h3><br>
		<div class="row">
			<div class="form-horizontal">
				<div class="form-group">
					<label class="control-label col-sm-2">顧客ID</label>
						<div class="col-xs-2">
							<%= @end_user.id %>
							<!-- 会員ステータスの表示 -->
							<% case @end_user.deleted? when false %>
							有効会員
							<% when true %>
							退会済
							<% end %>
						</div>
				</div>
				<div class="form-group">
					<label class="control-label col-sm-2">氏名:</label>
					<div class="col-xs-2">
						<%= @end_user.name1 %><%= @end_user.name2 %>
					</div>
				</div>
				<div class="form-group">
					<label class="control-label col-sm-2">フリガナ:</label>
					<div class="col-xs-2">
						<%= @end_user.name3 %><%= @end_user.name4 %>
				</div>
				</div>
				<div class="form-group">
					<label class="control-label col-sm-2">郵便番号:</label>
					<div class="col-xs-2">
						<%= @end_user.post %>
					</div>
				</div>
				<div class="form-group">
					<label class="control-label col-sm-2">住所:</label>
					<div class="col-xs-5">
						<%= @end_user.address %>
					</div>
				</div>
				<div class="form-group">
					<label class="control-label col-sm-2">電話番号:</label>
					<div class="col-xs-2">
						<%= @end_user.number %>
					</div>
				</div>
				<div class="form-group">
					<label class="control-label col-sm-2">メールアドレス:</label>
					<div class="col-xs-2">
						<%= @end_user.email %>
					</div>
				</div>
				<div class="form-group">
					<div class="col-xs-offset-2 col-sm-3">
					<%= link_to "編集する", edit_admin_end_user_path(@end_user), class:"btn btn-danger btn-sm" %>
				    </div>
				</div>
					<div class="form-group">
					<div class="col-xs-offset-2 col-sm-3">
					<%= link_to "注文履歴一覧を見る", personal_order_admin_order_path(@end_user.id), class:"btn btn-danger btn-sm" %>
				</div>
			</div>
		</div>
	</div>
</div>


<style>
	.row {
		margin-left:  -85px;
	}
	.btn-danger {
		background-color: #CD5C5C;
		border-color: #CD5C5C;
		color: #FFF;
		font-size: 14px;
	}
</style>

