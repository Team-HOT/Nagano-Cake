<!-- ヘッダー部分 -->
<%= render 'admin/products/header' %>

<div class="container">
	<div class="row">
		<div class="col-xs-12">
			<h3>会員一覧画面</h3>
			<br>
			<table class="table table-hover">
				<thead>
					<tr>
						<th>商品ID</th>
						<th>氏名</th>
						<th>メールアドレス</th>
						<th>ステータス</th>
					</tr>
				</thead>
				<% @end_user.each do |end_user| %>
				<% name1 = end_user.name1 %>
				<% name2 = end_user.name2 %>
				<% full_name = name1+name2 %>
				<tbody>
					<tr>
						<td><%= end_user.id %></td>
						<td><%= link_to full_name, admin_end_user_path(end_user.id) %></td>
						<!-- 会員ステータスの表示 -->
						<td><%= end_user.email %></td>
						<% case end_user.deleted? when false %>
						<td>有効</td>
						<% when true %>
						<td>退会済</td>
						<% end %>
				　　　</tr>
				</tbody>
				<% end %>
			</table>
		</div>
	</div>
</div>

<style>
.table {
	font-size: 18px;
}
</style>




