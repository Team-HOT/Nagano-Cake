<h1>ジャンル編集画面</h1>

<%= form_for(@product_category, url: admin_product_category_path(@product_category)) do |f| %>

<div>ジャンル
<%= f.text_field :product_category_name %>

<label><%= f.radio_button :product_category_status, "有効" %>有効</label>
<label><%= f.radio_button :product_category_status, "無効" %>無効</label>

<%= f.submit '変更を保存する' %>
</div>

<% end %>
