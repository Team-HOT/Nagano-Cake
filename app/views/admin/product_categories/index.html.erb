<!-- ヘッダー部分 -->
<%= render 'admin/products/header', product_category: @product_category %>


<h1>ジャンル追加・一覧画面</h1>
<%= form_for(@product_category, url: admin_product_categories_path) do |f| %>
	<div>ジャンル
	<%= f.text_field :product_category_name %>
	<%= f.radio_button(:product_category_status, "有効") %>
	<%= f.label(:product_category_status, "有効", value: "有効") %>
	<%= f.radio_button(:product_category_status, "無効") %>
	<%= f.label(:product_category_status, "無効", value: "無効") %>
	<%= f.submit '追加' %>
	</div>
<% end %>

<table>
	<thead>
		<tr>
			<th>ジャンル</th>
			<th>状態</th>
		</tr>
	</thead>
	<% @product_categories.each do |p| %>
	<tbody>
		<tr>
			<td><%= p.product_category_name %></td>
			<td><%= p.product_category_status %></td>
			<td><%= link_to "編集する", edit_admin_product_category_path(p) %>
			</td>
			<td><%= link_to "削除", admin_product_category_path(p.id), method: :delete%>
			</td>
		</tr>
	</tbody>
	<% end %>
</table>