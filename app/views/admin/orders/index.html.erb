<!-- ヘッダー部分 -->
<%= render 'admin/products/header' %>
<% if params[:today] != nil %>
今日の注文一覧
<% @order = Order.where(created_at: Time.zone.now.beginning_of_day..Time.zone.now.end_of_day) %>
<% else %>
全注文一覧
<% end %>
	<div class="container">
		<div class="row">
			<div class="col-xs-12">
				<h3>注文一覧画面</h3><br>
				<table class="table table-hover">
					<thead>
						<tr>
							<th>購入日時</th>
							<th>購入者</th>
							<th>注文個数</th>
							<th>ステータス</th>
						</tr>
					</thead>
					<tbody>
						<% @order.each do |order| %>
						<% @a = 0 %>
						<tr>
							<td><%= link_to order.created_at.strftime("%Y-%m-%d%H:%M"), admin_order_path(order.id) %></td>
							<td><%= order.end_user.name1 %>
								<%= order.end_user.name2 %>
							</td>
							<% order.order_items.each do |i| %>
							<% @a += i.quantity %>
							<% end %>

						<td><%= @a %></td>
						<td><%= order.order_status %></td>
					</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>