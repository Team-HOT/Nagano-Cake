
<!-- ヘッダー部分 -->
<%= render 'admin/products/header' %>

<div class="container">
	<div class="row">
		<h3>注文詳細画面</h3><br>
			<div class="col-xs-8">
				<div class="form-group">
					<label>購入者</label>
					<div><%= @order.end_user.name1 %><%= @order.end_user.name2 %></div>
				</div>
				<div class="form-group">
					<label>配送先</label>
					<div>〒<%= @order.Delivery_address %></div>
				</div>
				<div class="form-group">
					<label>支払方法</label>
					<div><%= @order.payment %></div>
				</div>
				<div class="form-group">
				<%= form_for(@new_order, url: admin_order_path, method: :patch) do |f| %>
					<!-- 注文ステータスボタン -->
					<div>注文ステータス</div>
					<%= f.select :order_status, {入金待ち: '入金待ち', 入金確認: '入金確認', 製作中: '製作中', 発送準備中: '発送準備中', 発送済み: '発送済み'}, :selected=>@order.order_status %><%= f.submit "更新" %>
				<% end %>
				</div>
				</div>
			</div>
	<div class="row">
		<div class="col-xs-8">
			<table class="table">
				<thead>
					<tr>
						<th>商品名</th>
						<th>単価（税込）</th>
						<th>数量</th>
						<th>小計</th>
						<th>製作ステータス</th>
						<th></th>
					</tr>
				</thead>
				<tbody>
					<% @order.order_items.each do |f| %>
						<%= form_for(@new_order_item, url: admin_order_item_path, method: :patch) do |p| %>
							<% @a = 0 %>
							<% tax = 1.1 %>
						<tr>
							<td><%= f.order_item_name %></td>
							<!-- 税込単価の設定 -->
							<% total_price = f.order_item_price * tax %>
							<td><%= converting_to_jpy(total_price.floor) %></td>
							<td><%= f.quantity %></td>
							<!-- 税込単価の小計 -->
							<% @sub_total = total_price * f.quantity %>
							<% @a += @sub_total %>
							<td><%= converting_to_jpy(@a.floor) %></td>
							<!-- 製作ステータスボタン -->
							<td><div id="form1"><%= p.select :production_status, {着手不可: '着手不可', 製作待ち: '製作待ち', 製作中: '製作中', 製作完了: '製作完了'}, :selected=>f.production_status %></div>
							<!-- # order_item.idを渡す -->
							<%= p.hidden_field :order_item_id, :value => f.id %>
							</td>
							<td><%= p.submit "更新" %></td>
						</tr>
						<% end %>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
	<br>
	<div class="row">
		<div class="col-xs-3">
			<table class="table table-sm">
				<tr>
					<th>商品合計</th>
					<% @a = 0 %>
					<% tax = 1.1 %>
					<% @order.order_items.each do |order_item| %>
					<% @subtotal = order_item.order_item_price * order_item.quantity * tax %>
					<% @a += @subtotal %>
					<% end %>
					<td><%= converting_to_jpy(@a.floor) %>円</td>
				</tr>
				<tr>
					<th>送料</th>
					<td><%= @postage %>円</td>
				</tr>
				<tr>
					<th>請求金額合計</th>
					<td><%= converting_to_jpy(@a.floor + @postage) %>円</td>
				</tr>
			</table>
		</div>
	</div>
</div>