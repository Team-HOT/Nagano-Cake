<h1>商品一覧画面</h1>

<table>
	<thead>
		<tr>
			<th>商品ID</th>
			<th>商品名</th>
			<th>税抜価格</th>
			<th>ジャンル</th>
			<th>ステータス</th>
		</tr>
	</thead>
	<% @products.each do |product| %>
	<tbody>
		<tr>
			<td><%= product.id %></td>
			<td><%= link_to product.name, admin_product_path(product.id) %></td>
			<td><%= product.price %></td>
			<td>ケーキ</td>
			<td><%= product.sale_status %></td>
		</tr>
	</tbody>
	<% end %>
</table>