<!-- ヘッダー部分 -->
<%= render 'admin/products/header', products: @products %>

<div class="container">
	<div class="row">
		<div class="col-xs-12">
			<h3>商品一覧画面</h3>
			<br>
			<table class="table table-hover active">
				<thead>
					<tr>
						<th>商品ID</th>
						<th>商品名</th>
						<th>税抜価格</th>
						<th>ジャンル</th>
						<th>ステータス</th>
						<th></th>
					</tr>
				</thead>
				<% @products.each do |product| %>
				<tbody>
					<tr>
						<td><%= product.id %></td>
						<td><%= link_to product.name, admin_product_path(product.id) %></td>
						<td><%= converting_to_jpy(product.price) %></td>
						<td><%= product.product_category.product_category_name %></td>
						<td><%= product.sale_status %></td>
						<td><%= link_to "削除", admin_product_path(product.id), method: :delete%></td>
					</tr>
				</tbody>
				<% end %>
			</table>
		</div>
	</div>
</div>

<style>
.btn-danger {
	background-color: #CD5C5C;
	border-color: #CD5C5C;
	color: #FFF;
	font-size: 18px;
}
.table {
	font-size: 18px;
}
</style>