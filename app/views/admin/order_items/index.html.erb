<!-- ヘッダー部分 -->
<%= render 'admin/products/header' %>
<div class="container">
	<div class="row">
		<div class="col-xs-12">
			<h3>注文一覧画面</h3><br>
			<table class="table table-hover">
				<thead>
					<tr>
						<th>購入日時</th>
						<th>購入者</th>
						<th>注文個数</th>
						<th>ステータス</th>
					</tr>
				</thead>
				<tbody>
					<% @order_items.each do |item| %>
					<tr>
						<td><%= item.created_at.in_time_zone('Tokyo') %></td>
						<td></td>
						<td><%= item.order.quantity %></td>
						<td></td>
					</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>




